{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}
{% if content %}
 <div class="region region-nav-main d-flex justify-content-between w-100">
    {{ content }}
    <div role="search" class="d-flex position-relative">
        <button class="btn-search" type="button" aria-expanded="false" aria-label="Recherche">
            <span class="search-label focusable">{{ 'Recherche'|t }}</span>
        </button>
    </div>
    <a class="mburger mburger--collapse navbar-toggler" href="#off-canvas" title="button pour ouvrir le menu lateral">
      <span>Menu</span>
    </a>

  </div>
{% endif %}
